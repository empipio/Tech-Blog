<div class="card-body" style="background-color: navy; color: azure">
    <h5 class="card-title">{{post.blogTitle}}</h5>
    <h6 class="card-subtitle" style="color: skyblue">
    Created by {{post.user.username}} on {{format_date post.date_created}}
    </h6>
    <p class="card-text">{{post.blogText}}</p>
{{#each post.comments as |comment|}}    
    <p class="comment">Posted by {{comment.user.username}}: {{comment.commentText}}</p>
{{/each}}  
  </div>
  <form class="form comment-form">
      <div class="form-group">
        <label for="comment-text">Add your comment here:</label>
        <input class="form-input" type="text" id="comment-text" />
      </div>
      
      <div class="form-group">
        <button class="btn btn-primary" id="add-comment" type="submit">Add Comment</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">

{{#if logged_in}}
<script src="../js/comment.js"></script>
{{/if}}