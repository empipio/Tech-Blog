
{{#each posts as |post|}}
  <div class="card-body" style="background-color: navy; color: azure">
    <h5 class="card-title">{{post.blogTitle}}</h5>
    <h6 class="card-subtitle" style="color: skyblue">
    Created by {{post.userId}} on {{format_date post.date_created}}
    </h6>
    <p class="card-text">{{post.blogText}}</p>
  </div>
{{/each}}