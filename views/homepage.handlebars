{{#if logged_in}}
{{#each posts as |post|}}
  <div class="card-body" style="background-color: navy; color: azure">
    <h5 class="card-title" style="color: skyblue"><a id="post-link" href="/posts/{{post.id}}">{{post.blogTitle}}</a></h5>
    <h6 class="card-subtitle" style="color: skyblue">
    Created by {{post.user.username}} on {{format_date post.date_created}}
    </h6>
    <p class="card-text">{{post.blogText}}</p>
    <p class="comment">Posted by {{comment.user.username}}: {{comment.commentText}}</p>
  </div>
{{/each}}
{{else}}
{{#each posts as |post|}}
  <div class="card-body" style="background-color: navy; color: azure">
    <h5 class="card-title" style="color: skyblue"><a id="post-link" href="/posts/{{post.id}}">{{post.blogTitle}}</a></h5>
    <h6 class="card-subtitle" style="color: skyblue">
    Created by {{post.user.username}} on {{format_date post.date_created}}
    </h6>
    <p class="card-text">{{post.blogText}}</p>
  </div>
{{/each}}
{{/if}}