<!--loops through posts in posts array...where does posts array come from??-->
{{#each posts as |post|}}
  <div class="card-body" style="background-color: navy; color: azure">
    <h5 class="card-title">{{post.blog_title}}</h5>
    <h6 class="card-subtitle" style="color: skyblue">
    Created by {{post.user_id}} on {{format_date post.date_created}}
    </h6>
    <p class="card-text">{{post.blog_text}}</p>
  </div>
{{/each}}